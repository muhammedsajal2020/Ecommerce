


      <div class="container mt-auto p-5" style="" >
    <div class="row justify-content-md-center">
           <div class="col col-lg-8">
        
<table id="table_productView" class="display">
    <thead>
        
        <tr>
           
             <th class="text-center">Product Name</th>
            <th class="text-center">Brand Name</th>
             <th class="text-center">Price</th>
            <th class="text-center">Catogory</th>
            <th class="text-center">description</th>
            <th class="text-center">Stock</th>
            <th class="text-center">image</th>
            <th class="text-center">Edit</th>
            <th class="text-center">Delete</th>
            
           
        </tr>
    </thead>
     {{#each products}}
        <tbody>
          <tr>
            
            <td class="pt-3-half" contenteditable="true">{{this.product_name}}</td>
            <td class="pt-3-half" contenteditable="true">{{this.Brand_name}}</td>
            <td class="pt-3-half" contenteditable="true">{{this.product_price}}</td>
            <td class="pt-3-half" contenteditable="true">{{this.product_category}}</td>
            <td class="pt-3-half" contenteditable="true">{{this.product_description}}</td>
            <td class="pt-3-half" contenteditable="true">{{this.available_quantity}}</td>
            <td><img src="/product-images/{{this.images.[0]}}" style="width:50px;height:50px;"></td>
            
            
           
            <td>
              <span class="table-remove"
                ><a href="/admin/edit-product/{{this._id}}" type="button" class="btn btn-success btn-rounded btn-sm my-0">
                  Edit
                </a></span>
              
            </td>
            <td>
              <span class="table-remove"
                ><a href="/admin/delete-product/{{this._id}}" type="button" onclick="return confirm('Are you want to delete {{this.name}}?')" class="btn btn-danger btn-rounded btn-sm my-0">
                  Delete
                </a></span>
              
            </td>
          </tr>
          
          
        </tbody>
         {{/each}}
</table>
</div>
</div>
</div>
<script>
$(document).ready( function () {
    $('#table_productView').DataTable();
} );
</script>



