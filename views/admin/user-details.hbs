

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="https://code.jquery.com/jquery-3.5.1.js">
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js">
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap4.min.js">
<a href="/admin"><legend >Admin Home</legend></a>
<table id="example" class="table table-striped table-bordered" style=" width: 100% " >
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Controll</th>
                {{!-- <th>Start date</th>
                <th>Salary</th> --}}
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}} </td>
                 <td>{{this.phone_number}} </td>
                {{!-- <td style="color:blue;" class="">Active</td> --}}
                <td >{{#if this.userActived}}
                 <a href="/admin/block_user/{{this._id}}" type="button" onclick="return confirm ('are you sure want to Block')" class="btn btn-danger">Block</a> 
                     {{else}}
                <a href="/admin/active_user/{{this._id}}" type="button" onclick="return confirm ('are you sure want to Active')" class="btn btn-success">UnBlock</a></td>
                {{/if}}
                {{!-- <td>2011-01-25</td>
                <td>$112,000</td> --}}
            </tr>
            {{/each}}
        </tbody>
       
    </table>






<script src='http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.js'></script>
<script type="text/javascript">
$(document).ready(function () {
    $('#example').DataTable();
});
</script>