<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>




<style>
  .error{
    color: rgb(242, 9, 9);
  }
</style>

<script>
  jQuery.validator.addMethod("lettersonly", function(value, element) {
  return this.optional(element) || /^[a-z]+$/i.test(value);
}, "Letters only please");
 

    $("#adminAddProduct").validate({


        rules: {
            product_name: {
                required: true,
                minlength: 2,
                lettersonly:true

            },
           

            Brand_name: {
                required: true,
                minlength: 2,
                lettersonly:true
            },

            available_quantity: {
                required: true,
                minlength: 1,
                maxlength:10
            },

            


        },
        messages: {
             product_name: {
                required: "Ltters only  please"

            },
            Brand_name: {
                required: "Ltters only  please"

            },
        }
    })
    $('.numbers').keyup(function () { 
    this.value = this.value.replace(/[^0-9\.]/g,'');
});
     


</script>




